<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!--<item name="android:windowBackground">@android:color/white</item>-->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WidgetBar">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@color/material_blue_500</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="WidgetPercentChangeTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WidgetBidPriceTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WidgetStockSymbolTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
